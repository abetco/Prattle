<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/my_hangouts_name"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="name"/>

    <TextView
        android:id="@+id/my_hangouts_date"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="date"/>

    <TextView
        android:id="@+id/my_hangouts_location"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="location"/>

</RelativeLayout>

