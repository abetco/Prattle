<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/browse_hangouts_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/hangouts_border"
    android:padding="10dp"
    android:layout_marginBottom="5dp">

    <TextView
        android:id="@+id/browse_hangouts_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:text="title"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/browse_hangouts_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/browse_hangouts_title"
        android:layout_marginTop="20dp"
        android:text="date"/>

    <TextView
        android:id="@+id/browse_hangouts_location"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/browse_hangouts_title"
        android:layout_marginTop="20dp"
        android:layout_alignParentRight="true"
        android:text="location"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/browse_hangouts_date"
        android:layout_marginTop="30dp">

        <RelativeLayout
            android:id="@+id/browse_hangouts_profiles_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="5dp">

            <ImageView
                android:id="@+id/browse_hangouts_icon_1"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:scaleType="fitXY"
                android:layout_centerHorizontal="true"
                android:src="@drawable/ic_baseline_account_circle_faded_24" />

            <TextView
                android:id="@+id/browse_hangouts_name_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@id/browse_hangouts_icon_1"
                android:layout_marginTop="40dp"
                android:layout_centerHorizontal="true"
                android:text="\?"/>

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/browse_hangouts_profiles_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="5dp">

            <ImageView
                android:id="@+id/browse_hangouts_icon_2"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:scaleType="fitXY"
                android:layout_centerHorizontal="true"
                android:src="@drawable/ic_baseline_account_circle_faded_24" />

            <TextView
                android:id="@+id/browse_hangouts_name_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@id/browse_hangouts_icon_2"
                android:layout_marginTop="40dp"
                android:layout_centerHorizontal="true"
                android:text="\?"/>

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/browse_hangouts_profiles_3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="5dp">

            <ImageView
                android:id="@+id/browse_hangouts_icon_3"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:scaleType="fitXY"
                android:src="@drawable/ic_baseline_account_circle_faded_24" />

            <TextView
                android:id="@+id/browse_hangouts_name_3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@id/browse_hangouts_icon_3"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="40dp"
                android:text="\?"/>

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/browse_hangouts_profiles_4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/browse_hangouts_icon_4"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:scaleType="fitXY"
                android:src="@drawable/ic_baseline_account_circle_faded_24" />

            <TextView
                android:id="@+id/browse_hangouts_name_4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@id/browse_hangouts_icon_4"
                android:layout_marginTop="40dp"
                android:layout_centerHorizontal="true"
                android:text="\?"/>

        </RelativeLayout>

    </LinearLayout>



    <TextView
        android:id="@+id/browse_hangouts_participants"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/browse_hangouts_location"
        android:layout_marginTop="35dp"
        android:layout_alignParentRight="true"
        android:text=""/>

    <TextView
        android:id="@+id/browse_hangouts_min_participants"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/browse_hangouts_participants"
        android:layout_marginTop="25dp"
        android:layout_alignParentRight="true"
        android:text=""
        android:textSize="10dp"/>

</RelativeLayout>

