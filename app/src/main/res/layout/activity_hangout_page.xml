<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp"
    tools:context=".HangoutPage">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/hangout_page_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/hangouts_border"
        android:padding="10dp"
        android:layout_marginBottom="5dp">

        <TextView
            android:id="@+id/hangout_page_title"
            android:textColor="@color/black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:text="title"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/hangout_page_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/hangout_page_title"
            android:layout_marginTop="20dp"
            android:text="date"/>

        <TextView
            android:id="@+id/hangout_page_location"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/hangout_page_title"
            android:layout_marginTop="20dp"
            android:layout_alignParentRight="true"
            android:text="location"/>

        <LinearLayout
            android:id="@+id/hangout_page_profile_names"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/hangout_page_date"
            android:layout_marginTop="30dp">

            <RelativeLayout
                android:id="@+id/hangout_page_profiles_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="5dp">

                <androidx.cardview.widget.CardView
                    android:id="@+id/hangout_page_card_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="25dp"
                    app:cardPreventCornerOverlap="false">

                    <ImageView
                        android:id="@+id/hangout_page_icon_1"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:scaleType="fitXY"
                        android:layout_centerHorizontal="true"
                        android:src="@drawable/ic_baseline_account_circle_faded_24" />

                </androidx.cardview.widget.CardView>


                <TextView
                    android:id="@+id/hangout_page_name_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignTop="@id/hangout_page_card_1"
                    android:layout_marginTop="40dp"
                    android:layout_centerHorizontal="true"
                    android:text="\?"/>

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/hangout_page_profiles_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="5dp">

                <androidx.cardview.widget.CardView
                    android:id="@+id/hangout_page_card_2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="25dp"
                    app:cardPreventCornerOverlap="false">

                    <ImageView
                        android:id="@+id/hangout_page_icon_2"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:scaleType="fitXY"
                        android:layout_centerHorizontal="true"
                        android:src="@drawable/ic_baseline_account_circle_faded_24" />

                </androidx.cardview.widget.CardView>

                <TextView
                    android:id="@+id/hangout_page_name_2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignTop="@id/hangout_page_card_2"
                    android:layout_marginTop="40dp"
                    android:layout_centerHorizontal="true"
                    android:text="\?"/>

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/hangout_page_profiles_3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="5dp">

                <androidx.cardview.widget.CardView
                    android:id="@+id/hangout_page_card_3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="25dp"
                    app:cardPreventCornerOverlap="false">

                    <ImageView
                        android:id="@+id/hangout_page_icon_3"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:scaleType="fitXY"
                        android:layout_centerHorizontal="true"
                        android:src="@drawable/ic_baseline_account_circle_faded_24" />

                </androidx.cardview.widget.CardView>

                <TextView
                    android:id="@+id/hangout_page_name_3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignTop="@id/hangout_page_card_3"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="40dp"
                    android:text="\?"/>

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/hangout_page_profiles_4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <androidx.cardview.widget.CardView
                    android:id="@+id/hangout_page_card_4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="25dp"
                    app:cardPreventCornerOverlap="false">

                    <ImageView
                        android:id="@+id/hangout_page_icon_4"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:scaleType="fitXY"
                        android:layout_centerHorizontal="true"
                        android:src="@drawable/ic_baseline_account_circle_faded_24" />

                </androidx.cardview.widget.CardView>

                <TextView
                    android:id="@+id/hangout_page_name_4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignTop="@id/hangout_page_card_4"
                    android:layout_marginTop="40dp"
                    android:layout_centerHorizontal="true"
                    android:text="\?"/>

            </RelativeLayout>

        </LinearLayout>



        <TextView
            android:id="@+id/hangout_page_participants"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/hangout_page_location"
            android:layout_marginTop="35dp"
            android:layout_alignParentRight="true"
            android:text="2/4"/>

        <TextView
            android:id="@+id/hangout_page_min_participants"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/hangout_page_participants"
            android:layout_marginTop="25dp"
            android:layout_alignParentRight="true"
            android:text="minimum: 2"
            android:textSize="10dp"/>

        <TextView
            android:id="@+id/hangout_page_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/hangout_page_profile_names"
            android:layout_marginTop="70dp"
            android:text="description"/>

    </RelativeLayout>

    <ListView
        android:id="@+id/comments_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/hangout_page_layout">

    </ListView>

    <EditText
        android:id="@+id/comment_input"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/comments_list"
        android:hint="Write Comment Here"
        android:paddingHorizontal="5dp"/>

    <Button
        android:id="@+id/submit_comment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/comment_input"
        android:text="Submit Comment" />

    <Button
        android:id="@+id/hangout_page_bottom_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:text="Request to Join"/>

</RelativeLayout>