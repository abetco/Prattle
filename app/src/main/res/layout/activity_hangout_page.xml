<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HangoutPage">

    <TextView
        android:id="@+id/hangout_page_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="title"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/hangout_page_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/hangout_page_title"
        android:layout_marginTop="20dp"
        android:text="date" />

    <TextView
        android:id="@+id/hangout_page_location"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/hangout_page_title"
        android:layout_marginTop="20dp"
        android:layout_alignParentRight="true"
        android:text="location" />

    <TextView
        android:id="@+id/hangout_page_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/hangout_page_date"
        android:layout_marginTop="20dp"
        android:text="description" />

</RelativeLayout>